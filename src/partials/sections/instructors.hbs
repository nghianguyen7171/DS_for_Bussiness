<section id="instructors" class="section instructors">
    <div class="container">
        <h2 class="section-title">Instructors</h2>
        
        <div class="instructors-grid">
            {{#each instructors.instructors}}
            <div class="instructor-card">
                <div class="instructor-image{{#if (eq name "Dr. Nguyen Trong Nghia")}} instructor-image-top{{/if}}">
                    <img src="{{image}}" alt="{{name}}" loading="lazy">
                </div>
                <div class="instructor-info">
                    {{#if website}}
                    <h3><a href="{{website}}" target="_blank" rel="noopener noreferrer" class="instructor-name-link">{{name}}</a></h3>
                    {{else}}
                    <h3>{{name}}</h3>
                    {{/if}}
                    <p class="role">{{role}}</p>
                    <p class="bio">{{bio}}</p>
                    <a href="mailto:{{email}}" class="email">{{email}}</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

