<section id="this-week" class="section this-week">
    <div class="container">
        <h2 class="section-title">This Week (Week {{thisWeek.week_current}})</h2>
        
        <div class="week-grid">
            <div class="week-card highlights">
                <h3>📌 Week Highlights</h3>
                <ul>
                    {{#each thisWeek.highlights}}
                    <li>{{{this}}}</li>
                    {{/each}}
                </ul>
            </div>
            
            {{#if thisWeek.announcements}}
            <div class="week-card announcements">
                <h3>📢 Announcements</h3>
                {{#each thisWeek.announcements}}
                <div class="announcement">
                    <h4>{{title}}</h4>
                    <p class="date">{{date}}</p>
                    <p>{{content}}</p>
                </div>
                {{/each}}
            </div>
            {{/if}}
            
            {{#if thisWeek.upcoming}}
            <div class="week-card upcoming">
                <h3>🗓️ Coming Up</h3>
                <ul>
                    {{#each thisWeek.upcoming}}
                    <li><strong>{{event}}</strong> - {{date}}</li>
                    {{/each}}
                </ul>
            </div>
            {{/if}}
        </div>
    </div>
</section>

