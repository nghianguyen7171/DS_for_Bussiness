                <p>Code examples, datasets, and supplementary materials</p>
                <a href="{{course.links.github}}" class="btn btn-resource" target="_blank" rel="noopener">Visit GitHub</a>
            </div>
            
            <div class="resource-card">
                <div class="resource-icon">🔧</div>
                <h3>Software & Tools</h3>
                <ul class="software-list">
                    {{#each course.software}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                <a href="resources.html" class="btn btn-resource">Setup Guide</a>
            </div>
            
