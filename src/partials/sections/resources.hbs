<section id="resources" class="section resources">
    <div class="container">
        <h2 class="section-title">Course Resources</h2>
        
        <div class="resources-grid">
            <div class="resource-card">
                <div class="resource-icon">📚</div>
                <h3>Course Textbook</h3>
                <p>Data Science in Economics and Business (Python Applications)</p>
                <a href="{{course.links.book}}" class="btn btn-resource" target="_blank" rel="noopener">Access Textbook</a>
            </div>
            
            <div class="resource-card">
                <div class="resource-icon">📊</div>
                <h3>Slide Deck</h3>
